<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fab_margin"
    android:layout_margin="@dimen/fab_margin"
    android:background="@drawable/bg_">


    <TextView
        android:id="@+id/level"
        style="@style/BoardItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@drawable/bg_"
        app:layout_constrainedWidth="false"
        app:layout_constraintDimensionRatio="w,h 1:1"
        app:layout_constraintEnd_toStartOf="@+id/scores"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="8" />

    <TextView
        android:id="@+id/scores"
        style="@style/BoardItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/bg_"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/level"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="88" />

    <TextView
        android:id="@+id/time"
        style="@style/BoardItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_"
        android:text="45s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scores"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <TextView
        android:id="@+id/_level"
        style="@style/BoardItemLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Level"
        app:layout_constraintEnd_toEndOf="@id/level"
        app:layout_constraintStart_toStartOf="@id/level"
        app:layout_constraintTop_toTopOf="@id/level" />

    <TextView
        android:id="@+id/_scores"
        style="@style/BoardItemLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scores"
        app:layout_constraintEnd_toEndOf="@id/scores"
        app:layout_constraintStart_toStartOf="@id/scores"
        app:layout_constraintTop_toTopOf="@id/scores" />

    <TextView
        android:id="@+id/_time"
        style="@style/BoardItemLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time"
        app:layout_constraintEnd_toEndOf="@id/time"
        app:layout_constraintStart_toStartOf="@id/time"
        app:layout_constraintTop_toTopOf="@id/time" />

    <Button
        android:id="@+id/take_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/btn_b"
        android:text="Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/save_game"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level" />

    <Button
        android:id="@+id/save_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="@+id/take_rest"
        app:layout_constraintEnd_toStartOf="@+id/try_again"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/take_rest" />

    <Button
        android:id="@+id/try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        app:layout_constraintBottom_toBottomOf="@+id/take_rest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/save_game" />

    <TextView
        android:id="@+id/title"
        style="@style/BoardItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>