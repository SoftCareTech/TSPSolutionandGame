<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TSPSolutionAndGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueDark</item>
        <item name="colorPrimaryVariant">@color/blueLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellowDark</item>
        <item name="colorSecondaryVariant">@color/yellowLight</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.TSPSolutionAndGame.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TSPSolutionAndGame.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TSPSolutionAndGame.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="BoardItem" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/anim_bg_l</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintDimensionRatio">w 1:1</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="BoardItemLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="PopText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="PopButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/yellowDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:background">@drawable/btn_b_c</item>
        <item name="android:shadowColor"> @color/white</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="PopMenuSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="PopMenuSub" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Pop" >
        <item name="android:layout_margin">16dp</item>
        <item name="android:paddingTop">@dimen/fab_margin</item>
        <item name="android:paddingBottom">@dimen/fab_margin</item>
        <item name="android:paddingStart">@dimen/pop_margin</item>
        <item name="android:paddingEnd">@dimen/pop_margin</item>
        <item name="android:background">@drawable/bg_1</item>

    </style>



    <style name="PopTitle" parent="Widget.AppCompat.TextView">
    <item name="android:background">@drawable/bg_title</item>
    <item name="android:layout_margin">2dp</item>
    <item name="android:textSize">35sp</item>
    <item name="android:minWidth">70dp</item>
    <item name="android:textColor">@color/blueDark</item>

    <item name="layout_constraintDimensionRatio">w 1:1</item>
    <item name="android:textAlignment">center</item>
        <item name="android:shadowColor"> @color/white</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="MainButton" parent="Widget.AppCompat.Button">
    <item name="android:textColor">@color/yellowLight</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_marginTop">@dimen/fab_margin</item>
    <item name="android:background">@drawable/btn_b</item>
    <item name="android:shadowColor"> @color/white</item>
    <item name="android:shadowDx">2</item>
    <item name="android:shadowDy">2</item>
    <item name="android:shadowRadius">1</item>
    <item name="backgroundTint">@null</item>
    </style>



    <dimen name="pop_margin">8dp</dimen>
</resources>