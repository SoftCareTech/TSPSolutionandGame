<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="softcare.game">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tsp_ico"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tsp_ico"
        android:supportsRtl="true"
        android:theme="@style/Theme.TSPSolutionAndGame">
        <activity android:name=".PlotTspActivity"></activity>
        <activity
            android:theme="@style/Theme.TSPSolutionAndGame.NoActionBar"
            android:name=".AddCityIActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".GameActivity"
            android:theme="@style/Theme.TSPSolutionAndGame.NoActionBar" />
        <activity android:name=".AddCityDActivity" />
        <activity android:name=".AddCityLActivity" />
        <activity
            android:name=".SolutionActivity"
            android:label="@string/title_activity_solution"
            android:theme="@style/Theme.TSPSolutionAndGame.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>